<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <include
            android:id="@+id/main_actionbar"
            layout="@layout/fragment_actionbar_back" />


        <LinearLayout
            app:layout_constraintStart_toStartOf="@id/settings_entity_btns_ll"
            android:id="@+id/settings_profile_ll"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="92dp"
            android:layout_marginStart="3dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/settings_entity_btns_ll"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:src="@drawable/ilst_boy_04_red" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:includeFontPadding="false"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/pretendard_bold"
                    android:includeFontPadding="false"
                    android:text="님"
                    android:textColor="@color/black"
                    android:textSize="32sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_phone_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_bold"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_entity_btns_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/settings_profile_ll">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_profile_edit_btn"
                android:layout_width="146dp"
                android:layout_height="44dp"
                android:layout_marginEnd="14dp"
                android:background="@drawable/radius_home_btn"
                android:fontFamily="@font/pretendard_bold"
                android:text="프로필 수정"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_logout_btn"
                android:layout_width="146dp"
                android:layout_height="44dp"
                android:background="@drawable/radius_home_btn"
                android:fontFamily="@font/pretendard_bold"
                android:text="로그아웃"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/setting_drop_out_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52.97dp"
            android:fontFamily="@font/pretendard_bold"
            android:includeFontPadding="false"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="계정 탈퇴"
            android:layout_marginBottom="33.9dp"
            android:textColor="@color/dark_red"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent" />


        <ImageView
            android:id="@+id/setting_drop_out_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5.97dp"
            android:src="@drawable/icn_out"
            app:layout_constraintBottom_toBottomOf="@id/setting_drop_out_tv"
            app:layout_constraintStart_toEndOf="@id/setting_drop_out_tv"
            app:layout_constraintTop_toTopOf="@id/setting_drop_out_tv" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/setting_drop_out_iv"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


