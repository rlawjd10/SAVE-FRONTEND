<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Record.RecordDetail.CalendarTimePlaceActivity">

    <!-- 캘린더 -->
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="38dp"
        android:text="날짜"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="85dp"
        />

    <TextView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="258dp"
        app:layout_constraintTop_toBottomOf="@+id/date"
        android:text="직접 입력"

        android:background="@color/dark_red"

        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        />

    <!-- 시간 -->
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/calendar"

        android:layout_marginTop="33dp"

        android:text="시간"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        android:textSize="16sp"

        />

    <!-- AM -->
    <android.widget.Button
        android:id="@+id/time_AM"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/white"

        app:layout_constraintStart_toStartOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/time"

        android:layout_marginTop="35dp"

        android:gravity="left"
        android:text="AM"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@drawable/txt_color_dark_gray_to_dark_red"
        android:textSize="20sp"
        />

    <!-- AM -->
    <android.widget.Button
        android:id="@+id/time_PM"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/white"

        app:layout_constraintLeft_toRightOf="@id/time_AM"
        app:layout_constraintTop_toBottomOf="@id/time"

        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"

        android:gravity="left"
        android:text="PM"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@drawable/txt_color_dark_gray_to_dark_red"
        android:textSize="20sp"
        />


    <!-- 시간 추가 -->

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:timePickerMode="spinner"

        app:layout_constraintLeft_toRightOf="@+id/time_PM"
        app:layout_constraintBottom_toTopOf="@id/record_place"
        />



    <!-- 목격 장소 -->
    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/date"
        app:layout_constraintTop_toBottomOf="@id/time_AM"

        android:layout_marginTop="20dp"

        android:text="목격 장소"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/black"
        android:textSize="16sp"

        />
    <EditText
        android:id="@+id/record_place"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:backgroundTint="#FF7F61"
        app:layout_constraintTop_toBottomOf="@+id/place"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:inputType="textPersonName"
        android:textSize="12sp"
        android:text="도로명주소"
        android:fontFamily="@font/pretendard_semi_bold"
        android:textColor="#FF7F61"
        tools:ignore="MissingConstraints" />


    <!--입력 완료 버튼-->
    <android.widget.Button
        android:layout_width="306dp"
        android:layout_height="44dp"
        android:id="@+id/btn_next"
        android:background="@color/dark_gray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_place"

        android:layout_marginBottom="58dp"
        android:layout_marginTop="54dp"
        android:text="다음"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semi_bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>