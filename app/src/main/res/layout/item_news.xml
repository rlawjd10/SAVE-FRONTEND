<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_news_cardview"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        app:cardCornerRadius="14dp"
        app:cardUseCompatPadding="true"
        android:elevation="10dp"

        android:layout_marginEnd="27dp"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/home_news_iv"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/home_news_title_tv"
                android:layout_width="166.12dp"
                android:layout_height="wrap_content"

                android:text="'21개월 여아 학대치사' 어린이집 원장, 징역 9년 확정"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_bold"

                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                app:layout_constraintStart_toEndOf="@id/home_news_iv"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/home_news_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="2022.08.19"
                android:textSize="10sp"
                android:textColor="@color/dark_red"
                android:fontFamily="@font/pretendard_semi_bold"

                android:layout_marginEnd="23.97dp"
                android:layout_marginBottom="14.85dp"
                app:layout_constraintTop_toBottomOf="@id/home_news_title_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>