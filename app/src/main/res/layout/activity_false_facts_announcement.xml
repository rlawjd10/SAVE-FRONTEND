<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="14dp"
        app:contentPadding="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/announcement_wrapper_iv"
                android:layout_width="306dp"
                android:layout_height="315dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="허위사실 유포 처벌 안내"
                app:layout_constraintStart_toStartOf="@id/announcement_wrapper_iv"
                app:layout_constraintTop_toTopOf="@id/announcement_wrapper_iv"
                android:layout_marginStart="18dp"
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"/>

            <TextView
                android:id="@+id/close_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textColor="@color/dark_red"
                app:layout_constraintEnd_toEndOf="@id/announcement_wrapper_iv"
                app:layout_constraintTop_toTopOf="@id/announcement_wrapper_iv"
                android:layout_marginEnd="18dp"
                android:layout_marginTop="14dp"
                android:textSize="12sp"
                android:fontFamily="@font/pretendard_semi_bold"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_consent_02"
                app:layout_constraintTop_toBottomOf="@id/title_tv"
                android:layout_marginTop="19dp"
                app:layout_constraintStart_toStartOf="@id/announcement_wrapper_iv"
                app:layout_constraintEnd_toEndOf="@id/announcement_wrapper_iv"/>



        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>