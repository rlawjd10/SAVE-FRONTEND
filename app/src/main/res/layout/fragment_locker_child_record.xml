<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/child_info_iv"
        android:layout_width="306dp"
        android:layout_height="96dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/fragment_child_blue_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/child_info_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/ilst_girl_01_blue"
        app:layout_constraintStart_toStartOf="@id/child_info_iv"
        app:layout_constraintTop_toTopOf="@id/child_info_iv" />


    <TextView
        android:id="@+id/child_info_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="23dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="박예명"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/child_info_iv"
        app:layout_constraintTop_toTopOf="@id/child_info_iv" />

    <TextView
        android:id="@+id/child_info_specific_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106.03dp"
        android:layout_marginTop="55dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="여자/5세/서울시 마포구 상암동"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/child_info_iv"
        app:layout_constraintTop_toTopOf="@id/child_info_iv" />

    <TextView
        android:id="@+id/child_info_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="235dp"
        android:layout_marginTop="11.02dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="2022.07.05"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="@id/child_info_iv"
        app:layout_constraintTop_toTopOf="@id/child_info_iv" />

<!--    android:layout_marginTop="32dp"-->
<!--    android:layout_marginBottom="38.77dp"-->

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/record_content_tb"
        android:layout_width="match_parent"
        android:layout_height="19dp"

        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:paddingTop="-1dp"
        android:paddingBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@id/record_content_vp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/child_info_iv"
        app:tabIndicator="@android:color/transparent"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#FF7F61"
        app:tabTextAppearance="@style/tab_text" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/record_content_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/suspect_control_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/child_info_iv"
        app:layout_constraintTop_toBottomOf="@id/record_content_tb" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/suspect_control_btn"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/fragment_dark_red_background"
        android:fontFamily="@font/pretendard_bold"
        android:text="학대 행위자 관리"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


