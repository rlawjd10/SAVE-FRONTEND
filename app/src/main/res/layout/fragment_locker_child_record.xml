<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!--    android:layout_marginTop="50dp"-->
    <!--    android:layout_marginBottom="56.77dp"-->
<!--19dp-->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/record_content_tb"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="52dp"
        android:paddingTop="-1dp"
        android:paddingBottom="-1dp"
        app:layout_constraintBottom_toTopOf="@id/record_content_vp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabIndicator="@android:color/transparent"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabSelectedTextColor="#FF7F61"
        app:tabTextAppearance="@style/tab_text" />


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/record_content_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/suspect_control_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_content_tb" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/suspect_control_btn"
        android:layout_width="146dp"
        android:layout_height="44dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/fragment_dark_red_background"
        android:fontFamily="@font/pretendard_bold"
        android:text="학대 행위자 관리"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/record_content_vp" />

</androidx.constraintlayout.widget.ConstraintLayout>



