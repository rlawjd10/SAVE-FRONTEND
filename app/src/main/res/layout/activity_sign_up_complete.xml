<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign.SignUpCompleteActivity">

    <TextView
        android:id="@+id/complete_signup_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="회원가입이\n완료되었습니다."
        android:textSize="32sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_semi_bold"

        android:layout_marginTop="197dp"
        android:layout_marginStart="27dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/signup_complete_iv"
        android:layout_width="251dp"
        android:layout_height="186.16dp"
        android:src="@drawable/ilst_register"

        android:layout_marginTop="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/complete_signup_tv"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goto_login_btn"
        android:layout_width="0dp"
        android:layout_height="44dp"

        android:background="@drawable/radius_home_btn"
        android:text="로그인 화면으로"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_bold"

        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginTop="144.84dp"
        app:layout_constraintTop_toBottomOf="@+id/signup_complete_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>