<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_record_info_iv"
        android:layout_width="146dp"
        android:layout_height="261dp"
        android:background="@drawable/fragment_child_red_on_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_record_date_tv"
        android:layout_width="95.06dp"
        android:layout_height="64.48dp"
        android:layout_marginStart="25.35dp"
        android:layout_marginTop="29.39dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="2022년\n7월 5일"
        android:textColor="@color/dark_red"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/item_record_info_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_info_iv" />

    <TextView
        android:id="@+id/item_record_time_tv"
        android:layout_width="95.06dp"
        android:layout_height="26.72dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="PM 12:30"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_record_date_tv"
        app:layout_constraintTop_toBottomOf="@id/item_record_date_tv" />

    <TextView
        android:id="@+id/item_record_location_tv"
        android:layout_width="95.06dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:text="아파트 복도"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/item_record_time_tv"
        app:layout_constraintTop_toBottomOf="@id/item_record_time_tv" />

    <TextView
        android:id="@+id/item_create_date_tv"
        android:layout_width="61dp"
        android:layout_height="12dp"
        android:layout_marginBottom="13.84dp"
        android:layout_marginEnd="23.97dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="2022.07.05"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/item_record_info_iv"
        app:layout_constraintEnd_toEndOf="@id/item_record_info_iv"/>

</androidx.constraintlayout.widget.ConstraintLayout>