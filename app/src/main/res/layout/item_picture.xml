<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_picture_cardView"
        android:layout_width="94dp"
        android:layout_height="94dp"
        app:cardCornerRadius="14dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="94dp"
            android:layout_height="94dp">

            <ImageView
                android:id="@+id/picture_iv"
                android:layout_width="94dp"
                android:layout_height="94dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/icn_picture_normal" />

            <ImageView
                android:id="@+id/picture_plus"
                android:layout_width="10.59dp"
                android:layout_height="12.03dp"
                android:layout_marginEnd="9.96dp"
                android:layout_marginBottom="9.95dp"
                android:src="@drawable/icn_plus"
                app:layout_constraintBottom_toBottomOf="@id/picture_iv"
                app:layout_constraintEnd_toEndOf="@id/picture_iv" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>