<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.option.HomePasswordChangeFragment">

    <include
        android:id="@+id/main_actionbar"
        layout="@layout/fragment_actionbar_back" />

    <TextView
        android:id="@+id/original_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="기존 비밀번호"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"

        android:layout_marginTop="100dp"
        android:layout_marginStart="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/origin_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_red"

        android:hint="기존 비밀번호"
        android:textColorHint="@color/dark_red"
        android:textSize="16sp"
        android:textColor="@color/dark_red"
        android:fontFamily="@font/pretendard_semi_bold"
        android:inputType="textPassword"

        android:paddingStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toBottomOf="@id/original_password_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <ImageView
        android:id="@+id/show_password_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_show_normal"

        android:layout_marginEnd="11.02dp"
        app:layout_constraintTop_toTopOf="@id/origin_password_et"
        app:layout_constraintBottom_toBottomOf="@id/origin_password_et"
        app:layout_constraintEnd_toEndOf="@id/origin_password_et"/>
    
    <ImageView
        android:id="@+id/delete_password_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_erase"

        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/origin_password_et"
        app:layout_constraintBottom_toBottomOf="@id/origin_password_et"
        app:layout_constraintEnd_toStartOf="@id/show_password_iv"/>

    <TextView
        android:id="@+id/new_password_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="신규 비밀번호"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"

        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@id/original_password_title_tv"
        app:layout_constraintTop_toBottomOf="@id/origin_password_et"/>

    <EditText
        android:id="@+id/new_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_red"

        android:hint="영문, 숫자, 특수문자 포함 8~20자"
        android:textColorHint="@color/dark_red"
        android:textSize="16sp"
        android:textColor="@color/dark_red"
        android:fontFamily="@font/pretendard_semi_bold"
        android:inputType="textPassword"

        android:paddingStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/show_password2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_show_normal"

        android:layout_marginEnd="11.02dp"
        app:layout_constraintTop_toTopOf="@id/new_password_et"
        app:layout_constraintBottom_toBottomOf="@id/new_password_et"
        app:layout_constraintEnd_toEndOf="@id/new_password_et"/>

    <ImageView
        android:id="@+id/delete_password2_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_erase"

        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/new_password_et"
        app:layout_constraintBottom_toBottomOf="@id/new_password_et"
        app:layout_constraintEnd_toStartOf="@id/show_password2_iv"/>

    <EditText
        android:id="@+id/notify_password_et"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_red"

        android:hint="비밀번호 확인"
        android:textColorHint="@color/dark_red"
        android:textSize="16sp"
        android:textColor="@color/dark_red"
        android:fontFamily="@font/pretendard_semi_bold"
        android:inputType="textPassword"

        android:paddingStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        app:layout_constraintTop_toBottomOf="@id/new_password_et"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/show_password3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icn_show_normal"

        android:layout_marginEnd="11.02dp"
        app:layout_constraintTop_toTopOf="@id/notify_password_et"
        app:layout_constraintBottom_toBottomOf="@id/notify_password_et"
        app:layout_constraintEnd_toEndOf="@id/notify_password_et"/>

    <ImageView
        android:id="@+id/delete_password3_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_erase"

        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toTopOf="@id/notify_password_et"
        app:layout_constraintBottom_toBottomOf="@id/notify_password_et"
        app:layout_constraintEnd_toStartOf="@id/show_password3_iv"/>


    <TextView
        android:id="@+id/home_password_change_length_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="8~20자 이내로 입력하여 주십시오."
        android:textColor="@color/dark_red"
        android:textSize="10sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:lineSpacingExtra="6dp"

        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/original_password_title_tv"
        app:layout_constraintTop_toBottomOf="@id/notify_password_et"/>

    <TextView
        android:id="@+id/home_password_change_combi_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="영문, 숫자, 특수문자를 조합하여 입력하여 주십시오."
        android:textColor="@color/dark_red"
        android:textSize="10sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:lineSpacingExtra="6dp"

        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/original_password_title_tv"
        app:layout_constraintTop_toBottomOf="@id/home_password_change_length_tv"/>

    <TextView
        android:id="@+id/home_password_change_asso_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="비밀번호가 일치하지 않습니다."
        android:textColor="@color/dark_red"
        android:textSize="10sp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:lineSpacingExtra="6dp"

        android:visibility="gone"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="@id/original_password_title_tv"
        app:layout_constraintTop_toBottomOf="@id/home_password_change_combi_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>