<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_record_add_iv"
        android:layout_width="146dp"
        android:layout_height="261dp"
        android:background="@drawable/fragment_child_red_off_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/item_add_record_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_add"
        app:layout_constraintBottom_toBottomOf="@id/item_record_add_iv"
        app:layout_constraintEnd_toEndOf="@id/item_record_add_iv"
        app:layout_constraintStart_toStartOf="@id/item_record_add_iv"
        app:layout_constraintTop_toTopOf="@id/item_record_add_iv" />



</androidx.constraintlayout.widget.ConstraintLayout>