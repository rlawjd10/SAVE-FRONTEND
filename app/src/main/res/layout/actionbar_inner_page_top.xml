<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_scrollFlags="scroll|enterAlways"
    android:background="@color/white"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/appbar_back_btn"
            android:layout_width="21.42dp"
            android:layout_height="22.22dp"
            android:src="@drawable/icn_back_normal"
            android:backgroundTint="@color/white"

            android:layout_marginStart="27dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/appbar_page_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="페이지 이름"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:visibility="invisible"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/appbar_complete_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="완료"
            android:textSize="16sp"
            android:textColor="@color/dark_red"
            android:fontFamily="@font/pretendard_bold"
            android:visibility="invisible"

            android:layout_marginEnd="26.96dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.appbar.AppBarLayout>