<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">


<!--    <com.google.android.exoplayer2.ui.PlayerView-->
<!--        android:id="@+id/audio_pv"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        app:use_controller="false"/>-->

    <ProgressBar
        android:id="@+id/exo_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="306dp"
        android:layout_height="48dp"
        android:progress="40"
        android:progressDrawable="@drawable/progressbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/recording_play_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="26dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintBottom_toBottomOf="@id/exo_progress"
        app:layout_constraintStart_toStartOf="@id/exo_progress"
        app:layout_constraintTop_toTopOf="@id/exo_progress" />



    <ImageView
        android:id="@+id/recording_pause_iv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:layout_marginStart="26dp"
        android:visibility="gone"
        android:src="@drawable/btn_player_pause"
        app:layout_constraintBottom_toBottomOf="@id/exo_progress"
        app:layout_constraintStart_toStartOf="@id/exo_progress"
        app:layout_constraintTop_toTopOf="@id/exo_progress" />

    <TextView
        android:id="@+id/recording_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:fontFamily="@font/pretendard_medium"
        android:text="음성 097.mp4a"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/exo_progress"
        app:layout_constraintStart_toStartOf="@id/exo_progress"
        app:layout_constraintTop_toTopOf="@id/exo_progress" />


    <TextView
        android:id="@+id/recording_time_now_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3.97dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="00:09"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/exo_progress"
        app:layout_constraintEnd_toStartOf="@id/recording_length_tv"
        app:layout_constraintTop_toTopOf="@id/exo_progress" />

    <TextView
        android:id="@+id/recording_length_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20.97dp"
        android:fontFamily="@font/pretendard_semi_bold"
        android:text="01:42"
        android:textColor="#D9D9D9"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/exo_progress"
        app:layout_constraintEnd_toEndOf="@id/exo_progress"
        app:layout_constraintTop_toTopOf="@id/exo_progress" />


</androidx.constraintlayout.widget.ConstraintLayout>